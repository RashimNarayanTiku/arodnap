{
    version = "0.2.0",
    "configurations": [
        "name": "Django",
        "type": "python",
        "request": "launch",
        "stopOnEntry": false,
        "python": "${config.python.pythonPath}",
        "program": "${workspaceRoot}/manage.py",
        "args": [
            "runserver",
            "--no-color",
            "--noreload"
        ],
        "debugOptions": [
            "WaitOnAbnormalExit",
            "WaitOnNormalExit",
            "RedirectOutput",
            "DjangoDebugging"
        ],
    ]
}